<!DOCTYPE html>
<html lang="en-US">
<head>
<title>@Document.GetString("PageTitle")</title>
@await Html.PartialAsync("_partials/_header")
@await RenderSectionAsync("head", false)
</head>
<body class="bg-gray-100 tracking-wider tracking-normal flex flex-col min-h-screen">
    @await Html.PartialAsync("_partials/_headerNav")

<!-- Container -->
<div class="container w-full flex-grow mx-auto px-2 pt-8 lg:pt-16 mt-16">
    @RenderBody()
</div>

<!-- Footer -->
@await Html.PartialAsync("_partials/_footer")
<!-- Footer End -->
@{
    var analytics = Document.GetString("GoogleAnalytics");
}

@if (!string.IsNullOrEmpty(analytics))
{
<!-- GoogleAnalytics -->
<script type="text/plain" async src="https://www.googletagmanager.com/gtag/js?id=@analytics" crossorigin="anonymous" data-no-mirror=data-no-mirror></script>
<script type="text/plain">
window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());
gtag('config', '@analytics');
</script>
<!-- end of GoogleAnalytics-->
}

<script>
//Javascript to toggle the menu
document.getElementById('nav-toggle').onclick = function(){
    document.getElementById("nav-content").classList.toggle("hidden");
}
</script>
</body>
</html>