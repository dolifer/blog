<footer class="bg-white border-t border-gray-400 shadow text-gray-500">
    <div class="container mx-auto flex py-4">
        <div class="w-full mx-auto flex flex-wrap">
            <div class="flex w-full lg:w-1/2 ">
                <div class="px-8">
                    <h3 class="font-bold text-gray-900">&copy; @DateTime.Now.Year @Document.GetString("SiteTitle")</h3>
                    <ul class="list-reset items-center text-sm pt-2">
                        <li>
                            Generated by <a class="hover:text-blue-600 no-underline text-blue-500 hover:underline" target="_blank" href="https://statiq.dev/web">Statiq Web</a>.
                        </li>
                        <li>
                            Hosted by <a class="hover:text-blue-600 no-underline text-blue-500 hover:underline" target="_blank" href="https://pages.github.com">GitHub Pages</a>.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="flex w-full lg:w-1/2 lg:justify-end lg:text-right">
                <div class="px-8">
                    <ul class="list-reset items-center text-sm pt-2">
                         <li>
                            @if (Document.ContainsKey("GitHubCommit"))
                            {
                                <p class="small">
                                    <svg  class="inline-block h-5 pb-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                    </svg>
                                    <a class="no-underline text-blue-500 hover:text-blue-600 hover:underline" href="@Document.GetString("GitHubCommit")" title="@GitVersion.Sha">@GitVersion.PrefixSemVer</a>
                                </p>
                            }
                        </li>
                        @{
    IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
    IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                        }
                        @if (rssFeed != null)
                        {
                            <li>
                                <p class="small">
                                    <svg class="inline-block h-5 pb-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/>
                                    </svg>
                                    <a target="_blank" class="no-underline text-blue-500 hover:text-blue-600 hover:underline" href="@Context.GetLink(rssFeed)" title="View RSS feed"> RSS</a>

                                    @if (atomFeed != null)
                                    {
                                        <a target="_blank" class="no-underline text-blue-500 hover:text-blue-600 hover:underline" href="@Context.GetLink(atomFeed)" title="View Atom feed"> Atom</a>
                                    }
                                </p>
                            </li>
                        }
                        <li>
                            @if (Document.ContainsKey("EditLink"))
                            {
                                <p class="small">
                                    <svg class="inline-block h-5 pb-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    <a class="no-underline text-blue-500 hover:text-blue-600 hover:underline" href="@Document.GetString("EditLink")"> Edit This Page</a>
                                </p>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>