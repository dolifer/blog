<footer class="bg-white border-t border-gray-400 shadow text-gray-500">
    <div class="container mx-auto flex py-4">
        <div class="w-full mx-auto flex flex-wrap">
            <div class="flex w-full lg:w-1/2 ">
                <div class="px-8">
                    <h3 class="font-bold text-gray-900">&copy; @DateTime.Now.Year @Document.GetString("SiteTitle")</h3>
                    <ul class="list-reset items-center text-sm pt-2">
                    <li>
                        Generated by <a class="hover:text-teal-600 no-underline text-teal-500 hover:underline" target="_blank" href="https://statiq.dev/web">Statiq Web</a>.
                    </li>
                    <li>
                        Hosted by <a class="hover:text-teal-600 no-underline text-teal-500 hover:underline" target="_blank" href="https://pages.github.com">GitHub Pages</a>.
                    </li>
                    </ul>
                </div>
            </div>
            <div class="flex w-full lg:w-1/2 lg:justify-end lg:text-right">
                <div class="px-8">
                    <ul class="list-reset items-center text-sm pt-2">
                        <li>@GitVersion.SemVer</li>
                        <li>
                        @if (Document.ContainsKey("EditLink"))
                        {
                            <p class="small"><a class="no-underline text-teal-500 hover:text-teal-600 hover:underline" href="@Document.GetString("EditLink")"><i class="fa fa-edit"></i> Edit This Page</a></p>
                        }
                        </li>
                        <li>
                        @if (Document.ContainsKey("GitHubCommit"))
                        {
                            <p class="small"><a class="no-underline text-teal-500 hover:text-teal-600 hover:underline" href="@Document.GetString("GitHubCommit")">@GitVersion.Sha</a></p>
                        }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>