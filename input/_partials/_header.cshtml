<nav id="header" class="fixed w-full z-10 top-0 bg-white border-b border-gray-400">
    <div id="progress" class="h-1 z-20 top-0" style="background: linear-gradient(to right, #4dc0b5 var(--scroll), transparent 0); --scroll:0%;"></div>

    <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 py-4">
			
        <div class="pl-4">
            <a class="text-gray-900 text-base no-underline hover:no-underline font-extrabold text-xl" href="#"> 
                @BlogSettings.Title
            </a>
            <p class="text-gray-600">
                @BlogSettings.Description
            </p>
        </div>

        <div class="block lg:hidden pr-4">
            <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-900 hover:border-teal-500 appearance-none focus:outline-none">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg>
            </button>
        </div>

        <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 md:bg-transparent z-20 bg-gray-100" id="nav-content">
            <ul class="list-reset lg:flex justify-end flex-1 items-center">
                <li class="mr-3">
                    <a class="inline-block @(GetTextClass("/blog")) py-2 px-4 no-underline" href="/">Blog</a>
                </li>
                <li class="mr-3">
                    <a class="inline-block @(GetTextClass("/projects")) no-underline hover:text-gray-900 hover:text-underline py-2 px-4" href="/projects">Projects</a>
                </li>
                <li class="mr-3">
                    <a class="inline-block @(GetTextClass("/about")) no-underline hover:text-gray-900 hover:text-underline py-2 px-4" href="/about">About</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@functions
{
    string GetTextClass(string item)
    {
        var url = Document.GetString("Section") ?? Document.GetLink();
        
        return url.StartsWith(item) ? "text-gray-900 font-bold" : "text-gray-600";
    }
}
