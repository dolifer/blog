@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<Blog.Generator.Models.HeaderLink>

<li class="mr-3">
    @if (Model.IsActive)
    {
        <span class="inline-block text-gray-900 font-bold py-2 px-4">@Model.Name</span>
    }
    else
    {
        <a class="inline-block text-gray-600 hover:text-gray-900 py-2 px-4 no-underline hover:underline" href="@Model.Url">@Model.Name</a>
    }
</li>