<!DOCTYPE html>
<html lang="@BlogSettings.Lang">
<head>
    @await Html.PartialAsync("_partials/_head")

    @await RenderSectionAsync("head", false)
</head>
<body class="bg-gray-100 tracking-wider tracking-normal">
@await Html.PartialAsync("_partials/_header")

<!-- Container -->
<div class="container w-full flex flex-wrap mx-auto px-2 pt-8 lg:pt-16 mt-16">
    @RenderBody()
</div>

<!-- Footer -->
@await Html.PartialAsync("_partials/_footer")
<!-- Footer End -->

@if (!string.IsNullOrEmpty(BlogSettings.GoogleAnalytics))
{
    <!-- GoogleAnalytics -->
    <script type="text/plain" async src="https://www.googletagmanager.com/gtag/js?id=@BlogSettings.GoogleAnalytics" crossorigin="anonymous" data-no-mirror=data-no-mirror></script>
    <script type="text/plain" >
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', '@BlogSettings.GoogleAnalytics');
</script>
    <!-- end of GoogleAnalytics-->
}

<script>
	//Javascript to toggle the menu
	document.getElementById('nav-toggle').onclick = function(){
		document.getElementById("nav-content").classList.toggle("hidden");
	}
</script>
</body>
</html>